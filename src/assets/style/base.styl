*
  margin 0 auto
  padding 0
  list-style none
  box-sizing: border-box

body, html
  line-height 1
  font-family centrale_sans_book, tahoma, arial, helvetica, sans-serif
  background-color #F2F2F2
  overflow hidden
  height 100%

.icon
  width 1em
  height 1em
  vertical-align middle
  fill currentColor
  overflow hidden

.btc
  overflow hidden

.relative
  position relative

.clearfix
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden

.box-shadow
  box-shadow 3px 3px 10px 0px rgba(0, 0, 0, 0.2)

a
  text-decoration none
