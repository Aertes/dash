*
  margin 0 auto
  padding 0
  list-style none
  box-sizing: border-box

body, html
  line-height 1
  font-family centrale_sans_book, tahoma, arial, helvetica, sans-serif
  background-color #F2F2F2
  overflow hidden
  height 100%

.btc
  overflow hidden

.relative
  position relative

.clearfix
  display: inline-block
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden

.box-shadow
  box-shadow 3px 3px 10px 0px rgba(0,0,0,0.2)
